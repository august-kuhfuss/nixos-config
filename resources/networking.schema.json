{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "properties": {
      "hostName": {
        "type": "string",
        "description": "The hostname of the device"
      },
      "ipv4": {
        "type": "string",
        "format": "ipv4",
        "description": "The IPv4 address of the device"
      },
      "gateway": {
        "type": "string",
        "format": "ipv4",
        "description": "The gateway IP address"
      },
      "nameservers": {
        "type": "array",
        "items": {
          "type": "string",
          "format": "ipv4"
        },
        "description": "List of nameserver IP addresses"
      }
    },
    "required": ["hostName", "ipv4", "gateway", "nameservers"],
    "additionalProperties": false
  }
  